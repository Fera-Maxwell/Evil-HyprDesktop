* {
  border: none;
  font-family: "Monocraft Nerd Font";
  font-size: 12px;
  min-height: 25px;
	transition: all 0.1s ease;
}

window#waybar {
  background: linear-gradient(180deg,
		rgba(80, 20, 20, 1) 0%,
		rgba(90, 30, 30, 0.8) 50%,
		rgba(70, 10, 10, 1) 100%),
		linear-gradient(90deg,
		rgba(80, 20, 20, 1) 0%,
		rgba(90, 30, 30, 0.8) 25%,
		rgba(90, 30, 30, 0.8) 75%,
		rgba(80, 20, 20, 1) 100%);
  color: #e6e6e6;
	border-bottom: solid 2px rgba(0, 0, 0, 1);
}

.modules-middle,
.modules-left,
.modules-right {
  margin: 2px 0;
	padding: 0 4px;
}
.modules-left,
.modules-right {
    padding: 0 8px;
    border: solid 1px rgba(100, 30, 10, 1);
    background: linear-gradient(180deg,
        rgba(140, 20, 40, 1),
        rgba(0, 0, 0, 0.3)
    );
}

.modules-left {
    border-bottom-right-radius: 8px;
		border-bottom-left-radius: 0px;
}

.modules-right {
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 0px;
}
#workspaces button {
  padding: 0 5px;
  background: linear-gradient(
		180deg,
		rgba(200, 0, 100, 0.5),
		rgba(200, 0, 100, 0)
	);
	margin: 0 1px;
  color: #cfcfcf;
}

#workspaces button.active {
  background: linear-gradient(
		180deg,
		rgba(255, 255, 255, 0.2),
		rgba(100, 100, 255, 0)
	);
}

#workspaces button:hover,
#clock:hover,
#pulseaudio:hover,
#network:hover,
#cpu:hover,
#memory:hover,
#backlight:hover,
#battery:hover {
  background: linear-gradient(
		180deg,
		rgba(255, 255, 255, 0.4),
		rgba(255, 255, 255, 0)
	);
}

#workspaces button:active,
#clock:active,
#pulseaudio:active,
#network:active,
#cpu:active,
#memory:active,
#backlight:active,
#battery:active {
  background: linear-gradient(
		180deg,
		rgba(255, 255, 255, 0),
		rgba(255, 255, 255, 0.8)
	);
}

#clock,
#pulseaudio,
#network,
#cpu,
#memory,
#backlight,
#battery,
#tray,
#workspaces,
#taskbar {
	margin: 2px 0;
  padding: 0 4px;
	border-bottom-left-radius: 10px;
	border-bottom-right-radius: 10px;
	border-left: solid 2px rgba(100, 30, 10, 1);
	border-right: solid 2px rgba(100, 30, 20, 1);
	border-bottom: solid 2px rgba(100, 30, 20, 1);
	background: linear-gradient(180deg,
		rgba(120, 50, 40, 1),
		rgba(0, 0, 0, 0.3)
	);
}
#tray {
	margin-top: 0px;
  margin-bottom: 0px;
  margin-left: 4px;
  margin-right: 0px;
	border-bottom-right-radius: 0;
	margin: 2px 0;
	padding: 2px 0;
}
#tray > widget {
  transition: all 0.2s ease;
}

#tray > widget image {
  opacity: 0.5;
  padding: 0 6px;
	margin: 0 0;
	background: linear-gradient(
		180deg,
		rgba(255,255,255,0.3),
		rgba(255,255,255,0)
	);
}

#tray > widget:hover image {
  opacity: 1.0;
	background: linear-gradient(
		180deg,
		rgba(255,255,255,0.5),
		rgba(255,255,255,0)
	);
}

#taskbar button {
	background: linear-gradient(
		0deg,
		rgba(255, 255, 255, 0),
		rgba(255, 255, 255, 0.2)
	);
	margin: 1px 1px;
	padding: 0px 3px;
	border-left: solid 2px rgba(100, 30, 10, 1);
	border-right: solid 2px rgba(100, 30, 20, 1);
	border-bottom: solid 2px rgba(100, 30, 20, 1);
	border-bottom-left-radius: 8px;
	border-bottom-right-radius: 8px;
	transition: all 0.1s ease;
}
#taskbar button:hover {
  background: linear-gradient(
		0deg,
		rgba(255, 255, 255, 0),
		rgba(255, 255, 255, 0.7)
	);
}
#taskbar button:active img {
    opacity: 1;
}

#custom-startbutton {
    color: #b4befe;
    background: linear-gradient(
        0deg,
        rgba(255, 255, 255, 0),
        rgba(255, 255, 255, 0.2)
    );
    margin-top: 0px;
    margin-bottom: 0px;
    margin-left: -8px;
    margin-right: 4px;
    
    padding: 0 12px;
    font-size: 16px;
    
    border-radius: 0px 0px 8px 0px; 
    
    border-left: solid 2px rgba(100, 30, 20, 1);
    border-right: solid 2px rgba(100, 30, 20, 1);
    border-bottom: solid 2px rgba(100, 30, 20, 1);
}
@keyframes breathe {
    0% { 
        color: #b4befe; 
        text-shadow: 0 0 4px rgba(180, 190, 254, 0.5);
    }
    50% { 
        color: #ffffff; 
        text-shadow: 
            0 0 8px rgba(255, 255, 255, 1), 
            0 0 16px rgba(180, 190, 254, 1),
            0 0 26px rgba(180, 190, 254, 0.8); 
    }
    100% { 
        color: #b4befe; 
        text-shadow: 0 0 4px rgba(180, 190, 254, 0.5);
    }
}

#custom-startbutton:hover {
    animation-name: breathe;
    animation-duration: 1s;
    animation-iteration-count: infinite;
    animation-timing-function: ease-in-out;
}

tooltip {
	background: linear-gradient(45deg,
		rgba(80, 20, 20, 0.9),
		rgba(100, 20, 20, 0.9)
	);
	border: 2px solid rgba(155, 10, 10, 0.8);
	border-radius: 8px;
	border-bottom-right-radius: 16px;
}
